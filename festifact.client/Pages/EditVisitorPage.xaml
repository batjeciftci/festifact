<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:festifact.client.ViewModels"
             x:DataType="viewmodel:ContactViewModel"
             x:Class="festifact.client.Pages.EditVisitorPage"
             Title="EditVisitorPage">

    <VerticalStackLayout Spacing="10">
        <VerticalStackLayout.Margin>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="Android" Value="10" />
                <On Platform="MacCatalyst" Value="10" />
            </OnPlatform>
        </VerticalStackLayout.Margin>

        <Frame>
            <Entry
                x:Name="firstName"
                VerticalOptions="Center" />
        </Frame>

        <Frame>
            <Entry
                x:Name="lastName"
                VerticalOptions="Center" />
        </Frame>

        <Frame>
            <Entry
                x:Name="email"
                VerticalOptions="Center" />
        </Frame>

        <Frame>
            <Entry
                x:Name="city"
                VerticalOptions="Center" />
        </Frame>

    </VerticalStackLayout>

</ContentPage>
